{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Passr CodePipeline Stack",
    "Metadata": {},
    "Parameters": {},
    "Mappings": {},
    "Conditions": {},
    "Resources": {
        "BuildProjectPolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {}
        },
        "BuildProjectRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Description": "Role for Passr Pipeline Codebuild Project",
                "ManagedPolicyArns": [
                    {
                        "Fn::GetAtt": [
                            "BuildProjectPolicy",
                            "Arn"
                        ]
                    }
                ],
                "RoleName": {
                    "Fn::Join": [
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Ref": "BuildProjectRole"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "project",
                        "Value": "Passr"
                    },
                    {
                        "Key": "env",
                        "Value": "all"
                    }
                ]
            }
        },
        "BuildProject": {
            "Type": "AWS::CodeBuild::Project",
            "Properties": {
                "Name": "PassrFrontendBuildProject",
                "Description": "Build Passr Frontend",
                "Artifacts": {
                    "Type": "CODEPIPELINE"
                },
                "Source": {
                    "Type": "CODEPIPELINE"
                },
                "Environment": {
                    "ComputeType": "BUILD_GENERAL1_SMALL",
                    "Image": "aws/codebuild/amazonlinux2-x86_64-standard:3.0",
                    "Type": "LINUX_CONTAINER"
                },
                "TimeoutInMinutes": 5,
                "RoleArn": {
                    "Fn::GetAtt": [
                        "BuildProjectRole",
                        "Arn"
                    ]
                },
                "Tags": [
                    {
                        "Key": "project",
                        "Value": "Passr"
                    },
                    {
                        "Key": "env",
                        "Value": "all"
                    }
                ]
            }
        },
        "PipelinePolicy": {
            "Type": "AWS::IAM::Policy",
            "Properties": {
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Action": [
                                "codepipeline:*"
                            ],
                            "Resource": "*"
                        },
                        {
                            "Action": [
                                "codebuild:BatchGetBuilds",
                                "codebuild:StartBuild"
                            ],
                            "Resource": {
                                "Fn::GetAtt": [
                                    "BuildProject",
                                    "Arn"
                                ]
                            },
                            "Effect": "Allow"
                        },
                        {
                            "Effect": "Allow",
                            "Action": [
                                "S3:DeleteObject",
                                "S3:DeleteObjects",
                                "S3:GetObject",
                                "S3:PutObject",
                                "S3:ListObject*"
                            ],
                            "Resource": [
                                {
                                    "Fn::Join": [
                                        "arn:aws:s3:::",
                                        {
                                            "Fn::ImportValue": "passr-frontend-dev-bucket"
                                        },
                                        "/*"
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "arn:aws:s3:::",
                                        {
                                            "Fn::ImportValue": "passr-frontend-prod-bucket"
                                        },
                                        "/*"
                                    ]
                                },
                                {
                                    "Fn::Join": [
                                        "arn:aws:s3:::",
                                        {
                                            "Fn::ImportValue": "passr-frontend-artifact-bucket"
                                        },
                                        "/*"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            }
        },
        "PipelineRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "Description": "Role for Passr Pipeline",
                "ManagedPolicyArns": [
                    {
                        "Fn::GetAtt": [
                            "PipelinePolicy",
                            "Arn"
                        ]
                    }
                ],
                "RoleName": {
                    "Fn::Join": [
                        {
                            "Ref": "AWS::Region"
                        },
                        {
                            "Ref": "PipelineRole"
                        }
                    ]
                },
                "Tags": [
                    {
                        "Key": "project",
                        "Value": "Passr"
                    },
                    {
                        "Key": "env",
                        "Value": "all"
                    }
                ]
            }
        },
        "AppPipelineWebhook": {
            "Type": "AWS::CodePipeline::Webhook",
            "Properties": {
                "Authentication": "GITHUB_HMAC",
                "AuthenticationConfiguration": {
                    "SecretToken": "{{resolve:secretsmanager:MyGitHubSecret:SecretString:token}}"
                },
                "Filters": [
                    {
                        "JsonPath": "$.ref",
                        "MatchEquals": "refs/heads/{Branch}"
                    }
                ],
                "TargetPipeline": {
                    "Ref": "Pipeline"
                },
                "TargetAction": "Source",
                "Name": "PipelineWebhook",
                "RegisterWithThirdParty": true
            }
        },
        "Pipeline": {
            "Type": "AWS::CodePipeline::Pipeline",
            "Properties": {
                "ArtifactStore": {
                    "Type": "S3",
                    "Location": {
                        "Fn::ImportValue": "passr-frontend-artifact-bucket"
                    }
                },
                "Name": "Passr",
                "RestartExecutionOnUpdate": true,
                "Version": 1,
                "RoleArn": {
                    "Fn::GetAtt": [
                        "PipelineRole",
                        "Arn"
                    ]
                },
                "Stages": [
                    {
                        "Name": "Source",
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Source",
                                    "Owner": "ThirdParty",
                                    "Provider": "GitHub",
                                    "Version": "1.0"
                                },
                                "Configuration": {
                                    "Owner": "Vikelabs",
                                    "Repo": "Passr",
                                    "Branch": "master",
                                    "OAuth": "{{resolve:secretsmanager:MyGitHubSecret:SecretString:token}}",
                                    "PullForSourceChange": false
                                },
                                "Name": "GetSource",
                                "OutputArtifacts": [
                                    {
                                        "Name": "SourceArtifact"
                                    }
                                ],
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "Build",
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Build",
                                    "Owner": "AWS",
                                    "Provider": "CodeBuild",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "ProjectName": {
                                        "Ref": "BuildProject"
                                    }
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "SourceArtifact"
                                    }
                                ],
                                "Name": "BuildFrontend",
                                "OutputArtifacts": [
                                    {
                                        "Name": "passr-built"
                                    }
                                ],
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "DeployDev",
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Deploy",
                                    "Owner": "AWS",
                                    "Provider": "Amazon S3",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "BucketName": {
                                        "Fn::ImportValue": "passr-frontend-dev-bucket"
                                    },
                                    "Extract": "true"
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "passr-built"
                                    }
                                ],
                                "Name": "DevDeploy",
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "ProdApproval",
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Approval",
                                    "Owner": "AWS",
                                    "Provider": "Manual",
                                    "Version": "1"
                                },
                                "Configuration": {
                                    "ExternalEntityLink": "https://dev.passr.ca"
                                },
                                "Name": "AproveProdDeplpy",
                                "RunOrder": 1
                            }
                        ]
                    },
                    {
                        "Name": "Deploy Prod",
                        "Actions": [
                            {
                                "ActionTypeId": {
                                    "Category": "Deploy",
                                    "Owner": "AWS",
                                    "Provider": "Amazon S3",
                                    "Version": "1.0"
                                },
                                "Configuration": {
                                    "BucketName": {
                                        "Fn::ImportValue": "passr-frontend-prod-bucket"
                                    },
                                    "Extract": "true"
                                },
                                "InputArtifacts": [
                                    {
                                        "Name": "passr-built"
                                    }
                                ],
                                "Name": "ProdDeploy",
                                "RunOrder": 1
                            }
                        ]
                    }
                ],
                "Tags": [
                    {
                        "key": "project",
                        "value": "Passr"
                    },
                    {
                        "key": "env",
                        "value": "all"
                    }
                ]
            }
        }
    },
    "Outputs": {}
}
